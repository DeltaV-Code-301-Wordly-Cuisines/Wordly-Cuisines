  
<!DOCTYPE html>
<html lang="en-us">
  <head>

    
  </head>
<body>
  <header id="header">


    
  </header>
  <main id="main-content">

    <% recipes.forEach(recipe => {%>
    <a href="<%= recipe.url %>"> recipe</a>
    <img src="<%= recipe.image %>"/>
    <p><%= recipe.recipeName %></p>
    <p><%= recipe.cuisineType %></p>
    <p><%= recipe.yield %></p>
    <form action="/recipe/<%= recipe.recipeName %>" method="POST">
     <input type="hidden" name="recipe" value="<%=JSON.stringify(recipe) %>">
     <input type="submit" value="View Recipe Details"/>
    </form>

    <form action="/favorite" method='POST'>
      <input type="hidden" name="recipe" value="<%=JSON.stringify(recipe) %>">
      <input type="submit" name="favorite" value="Add To Favorite">
    </form>
  
  
    <% }) %>
  
    
  </main>
  <footer id="footer">

   

  </footer>
</body>
</html>